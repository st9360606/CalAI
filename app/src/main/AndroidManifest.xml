<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <!-- 若要在開機/更新後重排程，需這個權限 -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <uses-permission android:name="android.permission.health.READ_HEALTH_DATA_HISTORY" />

    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" tools:targetApi="31" />

    <!-- Android 14+ 平台健康權限（你要讀的資料對應三個） -->
    <uses-permission android:name="android.permission.health.READ_STEPS" />
    <uses-permission android:name="android.permission.health.READ_EXERCISE" />
    <uses-permission android:name="android.permission.health.READ_SLEEP" />

    <application
        android:name="com.calai.app.BiteCal"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_focus_spoon"
        android:roundIcon="@mipmap/ic_focus_spoon_round"
        android:label="${appLabel}"
        android:theme="@style/Theme.BiteCal"
        android:supportsRtl="true"
        android:localeConfig="@xml/locales_config"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true"
        tools:ignore="ExtraText">

        <meta-data
            android:name="autoStoreLocales"
            android:value="true" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.BiteCal.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ★★★ 將 Receiver 放在 application 裡 ★★★ -->
        <receiver
            android:name="com.calai.app.data.fasting.notifications.FastingReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="FASTING_START" />
                <action android:name="FASTING_END_SOON" />
            </intent-filter>
        </receiver>

        <!-- exported="false"：只有系統或你自己 App（同 UID）能觸發（外部 App 不能隨便叫） -->
        <receiver
            android:name="com.calai.app.data.fasting.notifications.RescheduleBootReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
            </intent-filter>
        </receiver>

        <!-- 提供 Health Connect 權限說明頁（被 HC 授權畫面呼叫） -->
        <activity
            android:name=".ui.onboarding.healthconnect.PermissionsRationaleActivity"
            android:exported="true">
            <intent-filter>
                <!-- Health Connect 會檢查 App 是否能處理這個 action -->
                <action android:name="androidx.health.ACTION_SHOW_PERMISSIONS_RATIONALE" />
            </intent-filter>
        </activity>

        <!-- Android 14+：查看權限用途（由系統呼叫），目標仍是上面的說明頁 -->
        <activity-alias
            android:name="ViewPermissionUsageActivity"
            android:exported="true"
            android:targetActivity=".ui.onboarding.healthconnect.PermissionsRationaleActivity"
            android:permission="android.permission.START_VIEW_PERMISSION_USAGE">
            <intent-filter>
                <action android:name="android.intent.action.VIEW_PERMISSION_USAGE" />
                <category android:name="android.intent.category.HEALTH_PERMISSIONS" />
            </intent-filter>
        </activity-alias>

        <!-- WorkManager：使用自訂 Configuration.Provider（HiltWorkerFactory）時，
         必須移除預設的 WorkManagerInitializer（lint: RemoveWorkManagerInitializer） -->
        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false"
            tools:node="merge">

            <!-- 只移除 WorkManager 的 initializer，保留 App Startup 給其他元件使用 -->
            <meta-data
                android:name="androidx.work.WorkManagerInitializer"
                android:value="androidx.startup"
                tools:node="remove" />
        </provider>

    </application>

    <queries>
        <!-- ★ 讓 PackageManager 可見 Health Connect，避免誤判未安裝 -->
        <package android:name="com.google.android.apps.healthdata" />
    </queries>

</manifest>
